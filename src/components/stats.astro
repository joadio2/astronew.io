---
const { imageSrc, altText, title, content, imagePosition } = Astro.props;
const imageOrder = imagePosition === 'reverse' ? 'md:flex-row-reverse' : 'md:flex-row';
---

<!-- Componente Stats -->
<div class={`flex flex-col gap-4 md:flex-row items-center justify-center h-screen w-full px-4 lg:px-12 ${imageOrder}`}>
  <!-- Imagen -->
  <div class="w-full md:w-1/2 lg:w-2/5 mb-8 md:mb-0 p-4 rounded-tl-box rounded-br-box bg-indigo-400">
    <img
      src={imageSrc}
      alt={altText}
      class="object-cover w-full h-full rounded-xl shadow-2xl aspect-square"
    />
  </div>
  <!-- Texto -->
  <div class="w-full md:w-1/2 lg:w-3/5 text-center md:text-left">
    <h1 class="text-2xl md:text-4xl lg:text-5xl font-extrabold text-gray-900 mb-6 md:mb-8 lg:mb-10 leading-tight">
      {title}
    </h1>
    <p class="text-base md:text-lg lg:text-xl text-gray-700 leading-relaxed">
      {content}
    </p>
  </div>
</div>