<section class=" py-12 lg:py-24">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="max-w-2xl lg:max-w-4xl mx-auto bg-white rounded-lg shadow-lg p-6 lg:p-12">
      <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-center text-gray-800 mb-6 lg:mb-10">
        Contáctanos
      </h2>
      <form action="#" method="POST" class="space-y-6 lg:space-y-8">
        <!-- Nombre -->
        <div class="lg:flex lg:space-x-4">
          <div class="lg:w-1/2">
            <label for="name" class="block text-sm lg:text-base font-medium text-gray-700">Nombre Completo</label>
            <input
              type="text"
              id="name"
              name="name"
              class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2  focus:ring-blue-500 focus:border-blue-500 text-gray-700"
              placeholder="Tu nombre"
              required
            />
          </div>
          
          <!-- Correo -->
          <div class="lg:w-1/2">
            <label for="email" class="block text-sm lg:text-base font-medium text-gray-700">Correo Electrónico</label>
            <input
              type="email"
              id="email"
              name="email"
              class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2  focus:ring-blue-500 focus:border-blue-500 text-gray-700"
              placeholder="tucorreo@ejemplo.com"
              required
            />
          </div>
        </div>

        <!-- Teléfono -->
        <div class="lg:w-1/2">
          <label for="phone" class="block text-sm lg:text-base font-medium text-gray-700">Teléfono</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2  focus:ring-blue-500 focus:border-blue-500 text-gray-700"
            placeholder="+123 456 7890"
          />
        </div>

        <!-- Mensaje -->
        <div>
          <label for="message" class="block text-sm lg:text-base font-medium text-gray-700">Mensaje</label>
          <textarea
            id="message"
            name="message"
            rows="5"
            class="mt-1 block w-full px-4 py-2 bg-gray-50 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-700"
            placeholder="Escribe tu mensaje..."
            required
          ></textarea>
        </div>

        <!-- Botón de envío -->
        <div class="text-center">
          <button
            type="submit"
            class="w-full lg:w-auto bg-blue-500 text-white font-bold py-3 px-6 rounded-lg shadow-lg hover:bg-blue-700 transition duration-300"
          >
            Enviar Mensaje
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
