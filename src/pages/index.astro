---
import Layout from '../layouts/Layout.astro';
import Presentation from '../components/Presentation.astro';
import Stats from '../components/stats.astro';
import Feature from '../components/Feature.astro';
import Service from  '../components/Servicios.astro';
---

<Layout title="Matrix Consultora">
	<main class="  mx-auto ">
		<div class=" flex flex-col w-full  bg-gradient-to-r from-gray-200 via-gray-300 to-gray-400 items-center pt-12 ">
			<div class=" w-full md:h-screen flex justify-center py-4 md:py-40">
				<Presentation />
			</div>
			<div class="hidden md:flex flex-col w-full bg-gradient-to-r from-gray-100 via-gray-200 to-gray-300 pt-12 md:h-full py-10">
				<Stats />
			  </div>
			  
			  <div class="flex sm:hidden flex-col w-full bg-gradient-to-r from-gray-100 via-gray-200 to-gray-300 pt-12 h-full py-4">
				<Feature />
			  </div>
			  <div class="w-full bg-gradient-to-br from-blue-100  via-gray-300 to-gray-100 ">
				<Service/>
			  </div>
		</div>
	
	</main>
</Layout>

